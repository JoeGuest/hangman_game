<html>
  <head>
    <title>Hangman!</title>
    <link href="/styles/app.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
  <!-- <img src="/images/background.jpg" /> -->

    <div id="content">
      <div id="content-top">
        <div id="answer"><%= render_answer(game.answer.current_answer) %></div>
        <a href="/hangman/new" id="new-game">new game</a>
      </div>

      <div id="content-left">
        <div id="lives"><%= game.player.lives %></div>
        <div id="hangman"></div>
        <div id="trash"><%= game.wrong_guesses.map(&:letter).join(" ") %></div>
      </div>

      <div id="content-right">
        <form action="" method="POST">
          <div id="message"><%= game.message %></div>
          <% unless game.completed? %>
            <input type="text" name="guess" id="guess" autofocus/>
            <input type="submit" value="Guess!" />
          <% end %>
        </form> 
      </div>
    </div>
  </body>
</html>